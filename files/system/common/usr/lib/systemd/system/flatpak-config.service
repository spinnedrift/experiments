[Unit]
Description=Configure Flatpak Overrides
After=multi-user.target flatpak-session-helper.service flatpak-system-helper.service

[Service]
User=root
Type=oneshot
ConditionPathExists=!/var/lib/flatpak/.configured
ExecStart=/usr/libexec/flatpak-config
TimeoutSec=0
StandardOutput=syslog

[Install]
WantedBy=multi-user.target
